= form_for @enterprise do |f|
  - if @enterprise.errors.any?
    #error_explanation
      %h2= "#{pluralize(@enterprise.errors.count, "error")} prohibited this enterprise from being saved:"
      %ul
        - @enterprise.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :belongs_to
    = f.text_field :belongs_to
  .actions
    = f.submit 'Save'
